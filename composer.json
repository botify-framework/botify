{
    "name": "botify-framework/botify",
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "pre-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "require": {
        "botify-framework/framework": "^v1"
    },
    "require-dev": {
        "botify-framework/framework": "v1.0.0-dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../framework",
            "options": {
                "symlink": true,
                "versions": {
                    "botify-framework/framework": "v1.0.0-dev"
                }
            }
        }
    ]
}
